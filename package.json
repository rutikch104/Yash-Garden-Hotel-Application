{
  "name": "yash-garden-billing",
  "version": "1.0.0",
  "description": "Restaurant Billing System - Yash Garden",
  "main": "electron-main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on http://localhost:5002 && electron .\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend && electron-builder",
    "build:frontend": "cd frontend && npm run build",
    "build:win": "npm run build:frontend && electron-builder --win",
    "pack": "npm run build:frontend && electron-builder --dir"
  },
  "keywords": [
    "restaurant",
    "billing",
    "pos"
  ],
  "author": "Yash Garden",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yashgarden.billing",
    "productName": "Yash Garden Billing System",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "backend/**/*",
      "frontend/dist/**/*",
      "electron-main.js",
      "package.json"
    ],
    "asarUnpack": [
      "backend/**/*",
      "frontend/dist/**/*",
      "!backend/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "backend/database.sql",
        "to": "database.sql"
      },
      {
        "from": "backend/initialize-database.js",
        "to": "initialize-database.js"
      }
    ],
    "directories": {
      "output": "dist"
    }
  }
}

